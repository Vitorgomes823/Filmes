@using Newtonsoft.Json.Linq
@model JToken

<!DOCTYPE html>
<html>
<head>
    <title>Resultados</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(270deg, #ff6a00, #ee0979);
            background-size: 400% 400%;
            animation: gradientBG 10s ease infinite;
            color: white;
        }

        .movie-card {
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 20px;
            background-color: rgba(255, 255, 255, 0.1); /* Card translúcido */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);
        }

        img {
            border-radius: 10px;
            width: 100%;
            max-width: 200px;
            height: auto;
        }

        .custom-header {
            font-family: 'Arial', sans-serif;
            font-weight: 700;
            margin-bottom: 30px;
        }

         .spacer
        {
            height: 100px; /* Espaçamento ajustável */
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <!-- Título -->
        <div class="text-center">
            <h1 class="custom-header">🍿 Resultados da Busca</h1>
            <p class="text">Confira os filmes encontrados!</p>
        </div>

        <!-- Listagem dos Filmes -->
        <div class="row">
            @foreach (var movie in Model)
            {
                var posterPath = movie["poster_path"]?.ToString(); // Caminho da imagem
                var imageUrl = $"https://image.tmdb.org/t/p/w500/{posterPath}"; // URL completa da imagem

                <div class="col-md-4 mb-4">
                    <div class="movie-card">
                        <img src="@imageUrl" alt="Poster de @movie["title"]" class="mx-auto d-block" />
                        <h3 class="mt-2 text-center">@movie["title"]</h3>
                        <p><strong>Lançamento:</strong> @movie["release_date"]</p>
                        <p><strong>Sinopse:</strong> @movie["overview"]</p>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="spacer"></div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>